#appeal_state_code_wrapper
  - parent_region ||= params[:parent_region]
  - country = Carmen::Country.coded(parent_region)  unless parent_region.nil?
  - if country.nil?
    %em Please select a country above
  - elsif country.subregions?
    = subregion_select(:appeal, :state_code, parent_region)
  - else
    = text_field(:appeal, :state_code)

